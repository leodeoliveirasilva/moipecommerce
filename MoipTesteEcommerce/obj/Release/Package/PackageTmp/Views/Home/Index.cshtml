@{
    ViewBag.Title = "Home";
}
<section id="promo">
    <h2 style="text-align:center">
        Vamos as compras!
    </h2>
</section>

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="position:relative;z-index:1;">
    <!-- Indicators -->
    <ol class="carousel-indicators" style="z-index:1 !important">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="img-carousel">
                <img src="http://fv.ddequech.com.br:5080/fv/PublicTempStorage/multimedia/03551_8e7f57630d4c4eb3a5cfc4c41bc502bc.jpg" alt="Heinz">
            </div>
            <div class="legenda">
                <p class="nome-produto">Ketchup Heinz</p>
                <p class="preco">R$ 1,00</p>
                <button type="button" class="btn btn-success" onclick="buy(1, 'Ketchup Heinz', 'http://fv.ddequech.com.br:5080/fv/PublicTempStorage/multimedia/03551_8e7f57630d4c4eb3a5cfc4c41bc502bc.jpg')">Comprar Agora</button>
            </div> 
        </div>

        <div class="item">
                <div class="img-carousel">
                    <img src="https://store.storeimages.cdn-apple.com/4974/as-images.apple.com/is/image/AppleInc/aos/published/images/i/ph/iphone7/jetblack/iphone7-jetblack-select-2016?wid=300&hei=300&fmt=png-alpha&qlt=95&.v=1472430076339" alt="Iphone5c">
                </div>
                <div class="legenda">
                    <p class="nome-produto">Iphone 7</p>
                    <p class="preco">R$ 1,00</p>
                    <button type="button" class="btn btn-success" onclick="buy(1, 'Iphone 7', 'https://store.storeimages.cdn-apple.com/4974/as-images.apple.com/is/image/AppleInc/aos/published/images/i/ph/iphone7/jetblack/iphone7-jetblack-select-2016?wid=300&hei=300&fmt=png-alpha&qlt=95&.v=1472430076339')">Comprar Agora</button>
                </div> 
        </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

