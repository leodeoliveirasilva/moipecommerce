<script type="text/javascript" src="//assets.moip.com.br/v2/moip.min.js"></script>
<script type="text/javascript">
    function hash() {
          var cc = new Moip.CreditCard({
            number  : $("#number").val(),
            cvc     : $("#cvc").val(),
            expMonth: $("#month").val(),
            expYear : $("#year").val(),
            pubKey  : $("#public_key").val()
          });
          console.log(cc);
          if( cc.isValid()){
            $("#encrypted_value").val(cc.hash());
          }
          else{
            $("#encrypted_value").val('');
            alert('Invalid credit card. Verify parameters: number, cvc, expiration Month, expiration Year');
          }
    }
</script>
<h2>Insira seu dados de pagamentos, por favor:</h2><br />
<form id="form1">
    <input type="text" placeholder="Credit card number" id="number" /><br />
    <input type="text" placeholder="CVC" id="cvc" /><br />
    <input type="text" placeholder="Month" id="month" /><br />
    <input type="text" placeholder="Year" id="year" /><br />
    <input type="text" placeholder="Hash" id="encrypted_value" /><br /><br />
</form>

<button type="button" class="btn btn-success" id="encrypt" onclick="hash();">Success</button>

